<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:src="@mipmap/ic_default_placeholder"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@id/iv2"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        app:layout_constraintBottom_toTopOf="@id/iv2"
        app:layout_constraintLeft_toLeftOf="@id/iv2"
        app:layout_constraintRight_toRightOf="@id/iv2"
        android:text="当前进度:0%"
        android:id="@+id/tv_progress"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:src="@mipmap/ic_default_placeholder"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@id/iv3"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:background="@color/teal_200"
        android:gravity="center"
        android:src="@mipmap/ic_default_placeholder"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv2"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>